    <TextView
        android:id="@+id/panme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pnation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
